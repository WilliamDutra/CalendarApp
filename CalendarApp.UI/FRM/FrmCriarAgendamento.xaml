<Window x:Class="CalendarApp.UI.FRM.FrmCriarAgendamento"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CalendarApp.UI.FRM"
        mc:Ignorable="d"
        Title="Criar Agendamento" Height="550" Width="400">
    <Grid>
        <StackPanel Margin="30" Background="AntiqueWhite">
            <Border Padding="10">
                <StackPanel>
                    <Label Margin="0,5">Nome</Label>
                    <TextBox 
                        x:Name="Nome" 
                        Height="30"
                        Text="{ Binding Nome }" >
                    </TextBox>
                    <Label Margin="0,5">Descrição</Label>
                    <TextBox 
                        x:Name="Descricao" 
                        Height="100"
                        Text="{ Binding Descricao }" >
                    </TextBox>
                    <Label Margin="0,5">Horario de Execução</Label>
                    <TextBox 
                        x:Name="Horario" 
                        Height="30"
                        Text="{ Binding Horario }" >
                    </TextBox>
                </StackPanel>
            </Border>
            <Border Padding="10" >
                <Button Content="Salvar"></Button>
            </Border>
        </StackPanel>
    </Grid>
</Window>
