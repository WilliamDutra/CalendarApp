<Window x:Class="CalendarApp.UI.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CalendarApp.UI"
        mc:Ignorable="d"
        WindowStyle="SingleBorderWindow"
        Title="Calendar APP" 
        Height="450" 
        Width="800">
    <Grid>
        <StackPanel 
            Background="AliceBlue"
            Margin="20">
            <Border Padding="10">

                <StackPanel Margin="10" Orientation="Horizontal">

                    <Button Margin="10" Content="Criar Agendamento" Width="150" Height="30" Command="{ Binding Cadastrar }">
                    </Button>

                    <Button Margin="10" Content="Visualizar Agendamento" Width="150" Height="30" Command="{ Binding Visualizar }">
                    </Button>


                </StackPanel>

            </Border>
        </StackPanel>
    </Grid>
</Window>
